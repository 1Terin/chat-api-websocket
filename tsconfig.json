{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./build", 
    "rootDir": "./src",            
    "strict": true,  
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "incremental": true,
    "composite": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", ".aws-sam"]
}